{% extends 'forms/_layout.html.twig' %}

{% block form %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_errors(form.firstname) }}
            <div class="md-form">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}
            </div>
        </div>
        <div class="col-md-6">
            {{ form_errors(form.lastname) }}
            <div class="md-form">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_errors(form.email) }}
            <div class="md-form">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_errors(form.subject) }}
            <div class="md-form">
                {{ form_label(form.subject) }}
                {{ form_widget(form.subject) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_errors(form.message) }}
            <div class="md-form">
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
            </div>

        </div>
    </div>
    <div class="text-center text-md-center">
        <button type="submit" class="btn btn-rounded">{{ 'form.btn.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
