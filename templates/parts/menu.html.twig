{% for menu in menus %}
    <li class="nav-item {% if app.request.attributes.get('_route') == menu.routeName %}active{% endif %}">
        <a class="nav-link" href="{{ path(menu.routeName) }}">{{ menu.name|trans }} {% if app.request.attributes.get('_route') == menu.routeName %}<span class="sr-only">(current)</span>{% endif %}</a>
    </li>
{% endfor %}
